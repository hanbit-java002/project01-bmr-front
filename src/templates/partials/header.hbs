	<script>
		//추천테마 클릭 시
		function goRecommendTheme() {
			location.href = "recommend_theme.html";
		}


		//로그인/회원가입 팝업창에서 이전으로 클릭 시 함수 정의
		function goSignInChoice() {
			$(".sec01-choice").show();
			$(".sec02-email").hide();
			$(".sec03-setup-password").hide();
		}
		function goSignUpChoice() {
			$(".sec01-choice.signup").show();
			$(".sec02-email").hide();
			$(".sec03-setup-password").hide();
		}
		//로그인 입력창에서 비밀번호 재설정 클릭 시
		function goSetupPw() {
			$(".sec01-choice").hide();
			$(".sec02-email").hide();
			$(".sec03-setup-password").show();
		}
		//비밀번호 재설정 입력창에서 이전으로 클릭 시(전 페이지로 이동)
		function goSignInInput() {
			$(".sec01-choice").hide();
			$(".sec02-email").show();
			$(".sec03-setup-password").hide();
		}


		//문의 박스의 텍스트에 포커스될 때 색깔(빨강)과 포커스아웃될 때 색깔(회색) 함수 정의
		function q_text_focus() {
			$(".q-contents-box").css("border-color", "#fa3232");
		}
		function q_text_focus_out() {
			$(".q-contents-box").css("border-color", "#ccc");
		}


