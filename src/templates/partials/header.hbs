	<script>
		//문의 박스의 텍스트에 포커스될 때 색깔(빨강)과 포커스아웃될 때 색깔(회색) 함수 정의
		function q_text_focus() {
			$(".q-contents-box").css("border-color", "#fa3232");
		}
		function q_text_focus_out() {
			$(".q-contents-box").css("border-color", "#ccc");
		}


		//카메라 아이콘에 마우스 오버되면 색깔 진해지고 글씨 옆에 붙이기
		function camera_mouseover() {
			$(".fa-camera").css("color", "#555");
			$(".fa-camera").append("<span>스크린 샷 또는 파일 첨부</span>");
			$(".fa-camera>span").css("font-size", "11px");
		}
		//카메라 아이콘에 마우스 아웃되면 색깔 다시 연해지고 옆에 글씨 없애기
		function camera_mouseout() {
			$(".fa-camera").css("color", "#a9b0b7");
			$(".fa-camera>span").text("");
		}


		//앞으로 어떤 기능을 추가할까요? 클릭 시 sec02로(애니메이트 왼쪽으로)
